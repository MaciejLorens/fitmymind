<%= render partial: 'title' %>

<section>
  <div class="container mt-30 mb-30 pt-30 pb-30">
    <div class="row ">

      <div class="col-sm-12 col-md-3">
        <%= render partial: 'sidebar' %>
      </div>

      <div class="col-md-9">
        <div class="blog-posts">
          <div class="col-md-12">
            <div class="row list-dashed">
              <% @posts.each do |post| %>
                <article class="post mb-50 pb-30">

                  <div class="entry-header">
                    <div class="post-thumb">
                      <%= link_to image_tag(post.photo.url(:original), size: '850x450'), post_path(post) %>
                    </div>
                  </div>
                  <div class="clearfix"></div>

                  <div class="entry-content">
                    <%= link_to post.title.html_safe, post_path(post) %>

                    <ul class="list-inline">
                      <li>Napisane:
                        <span class="text-theme-colored">
                      <%= post.created_at.strftime('%d/%m/%Y') %>
                    </span>
                      </li>
                      <li>Przez:
                        <span class="text-theme-colored">
                      <%= post.author %>
                    </span>
                      </li>
                    </ul>

                    <p>
                      <%= post.introduction.html_safe %>
                    </p>

                    <ul class="list-inline like-comment pull-left flip font-16">
                      <li>
                        Kategoria: <%= link_to post.category.name, '#', class: 'post-category' %>
                      </li>
                      <li>
                        <div class="tags">
                          Tagi:
                          <% post.tags.each do |tag| %>
                            <%= link_to tag.name, '#', class: 'post-tag' %>
                          <% end %>
                        </div>
                      </li>
                    </ul>

                    <%= link_to '<i class="fa fa-angle-double-right text-theme-colored"></i> Czytaj wiÄ™cej...'.html_safe, post_path(post), class: 'pull-right flip text-gray font-16 mt-10' %>
                    <div class="clearfix"></div>
                  </div>
                </article>
              <% end %>
            </div>

          </div>
        </div>
      </div>

    </div>
  </div>
</section>
