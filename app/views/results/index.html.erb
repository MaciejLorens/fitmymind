<%= render partial: 'title' %>

<section id="lifestyle" data-bg-img="images/pattern/p8.png">
  <div class="container pb-0">
    <div class="bg-lighter bg-img-right-top sm-no-bg mt-sm-0" data-bg-img="images/gym/photos/2.png">
      <div class="row">
        <div class="col-md-12">

          <div class="results-wrapper" data-bg-img="assets/pin-board-wide.png" style="background-repeat: no-repeat">
            <ul>
              <% @results.each do |result| %>
                <li>
                  <a href="#">
                    <p><b>P. <%= result.name %></b></p>
                    <p><%= result.created_at.strftime('%d-%m-%Y') %></p>
                    <p><b><%= result.result %> kg !</b></p>
                  </a>
                </li>
              <% end %>
            </ul>
          </div>

        </div>
      </div>
    </div>
  </div>
</section>
