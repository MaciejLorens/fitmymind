<section id="blog">
  <div class="container pb-sm-50">
    <div class="section-title text-center">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2 class="title text-uppercase">Aktualności & <span class="text-white font-weight-300">blog</span></h2>
          <p class="text-uppercase letter-space-4">
            "Givers gain" - jedno z naszych mott. Dzielimy się naszą wiedzą abyś wykorzystał to dla swojego
            zdrowia. Daje nam to dużo satysfakcji i motywuje do dalszego rozwoju.
          </p>
        </div>
      </div>
    </div>
    <div class="section-content">
      <div class="row">

        <% @recent_posts.each do |post| %>
          <div class="col-md-4">
            <article class="post clearfix">
              <div class="entry-header">
                <div class="post-thumb thumb">
                  <%= link_to image_tag(post.photo.url(:medium), class: 'img-responsive', style: 'height: 220px;'), post_path(post) %>
                <div class="entry-meta meta-absolute text-center pl-15 pr-15">
                  <div class="display-table">
                    <div class="display-table-cell">
                      <ul class="font-12">
                        <li><a href="#" class="text-white"><i class="fa fa-thumbs-o-up"></i> <br>
                          30 Likes</a></li>
                        <li class="mt-20"><a href="#" class="text-white"><i class="fa fa-comments-o"></i> <br>
                          72 Comments</a></li>
                        <li class="mt-20"><a href="#" class="text-white"><i class="fa fa-share-square-o"></i> <br>
                          Share</a></li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
              <div class="entry-content p-20">
                <h4 class="entry-title text-white text-uppercase">
                  <%= link_to post.title, post_path(post) %>
                </h4>
                <ul class="entry-date list-inline mt-10 mb-10">
                  <li class="text-theme-colored">
                    <%= post.created_at.strftime('%d/%m/%Y') %>
                  </li>
                </ul>
                <p>
                  <%= post.introduction %>
                </p>

                <%= link_to '<i class="fa fa-angle-double-right text-theme-colored"></i> Czytaj więcej...'.html_safe, post_path(post), class: 'pull-left text-gray font-13 mt-10' %>

                <div class="clearfix"></div>
              </div>
            </article>
          </div>
        <% end %>

        <div class="col-md-4">
          <article class="post clearfix">
            <div class="entry-header">
              <div class="post-thumb thumb">
                <%= image_tag(@recent_new.photo.url(:medium), class: 'img-responsive', style: 'height: 220px;') %>
              <div class="entry-meta meta-absolute text-center pl-15 pr-15">
                <div class="display-table">
                  <div class="display-table-cell">
                    <ul class="font-12">
                      <li><a href="#" class="text-white"><i class="fa fa-thumbs-o-up"></i> <br>
                        30 Likes</a></li>
                      <li class="mt-20"><a href="#" class="text-white"><i class="fa fa-comments-o"></i> <br>
                        72 Comments</a></li>
                      <li class="mt-20"><a href="#" class="text-white"><i class="fa fa-share-square-o"></i> <br>
                        Share</a></li>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
            <div class="entry-content p-20">
              <h4 class="entry-title text-white text-uppercase">
                <%= link_to @recent_new.title, post_path(@recent_new) %>
              </h4>
              <ul class="entry-date list-inline mt-10 mb-10">
                <li class="text-theme-colored">
                  <%= @recent_new.created_at.strftime('%d/%m/%Y') %>
                </li>
              </ul>
              <p>
                <%= @recent_new.introduction %>
              </p>

              <%= link_to '<i class="fa fa-angle-double-right text-theme-colored"></i> Czytaj więcej...'.html_safe, post_path(@recent_new), class: 'pull-left text-gray font-13 mt-10' %>

              <div class="clearfix"></div>
            </div>
          </article>
        </div>

      </div>
    </div>
  </div>
</section>
