<section id="blog">
  <div class="container">
    <div class="section-title text-center">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h2 class="title text-uppercase">Aktualności <span class="text-blue">& blog</span></h2>
          <p class="text-uppercase letter-space-4 mb-0">
            "Givers gain" - jedno z naszych mott. Dzielimy się naszą wiedzą abyś wykorzystał to dla swojego
            zdrowia.
          </p>
        </div>
      </div>
    </div>
    <div class="section-content">
      <div class="row">

        <% @recent_posts.each do |post| %>
          <div class="col-md-4 mt-10">
            <article class="post clearfix">

              <div class="entry-header">
                <div class="post-thumb thumb">
                  <%= link_to image_tag(post.photo.url(:medium), class: 'img-responsive', style: 'height: 220px;'), post_path(post) %>
                </div>
              </div>

              <div class="entry-content p-20">

                <h4 class="entry-title text-white text-uppercase">
                  <%= link_to post.title&.html_safe.gsub('<h2>', '').gsub('</h2>', ''), post_path(post) %>
                </h4>

                <ul class="list-inline">
                  <li>
                    <span class="text-theme-colored">
                      <%= post.created_at.strftime('%d/%m/%Y') %>
                    </span>
                  </li>
                </ul>

                <p>
                  <%= post.introduction&.html_safe %>
                </p>

                <ul class="list-inline">
                  <li>Autor:
                    <span class="text-theme-colored">
                      <%= post.author %>
                    </span>
                  </li>
                </ul>
                <%= link_to '<i class="fa fa-angle-double-right text-theme-colored"></i> Czytaj więcej . . .'
                                .html_safe, post_path(post), class: 'pull-left text-gray mt-10' %>

                <div class="clearfix"></div>
              </div>
            </article>
          </div>
        <% end %>

